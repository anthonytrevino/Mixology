      <h5>Search for a drink</h5>

      <form action="/getCocktails" method="POST">
          <input type="text" name="query" placeholder="Enter Cocktail Name: ">
          <input type="submit" value="Search">
      </form>
      {{#data}}
      <uL>
      <li>
          <p>This exists</p>
          <p>{{strDrink}}</p>
      </li>
      </ul>
      {{/data}}
    </div>

    <div id="createDrink">
      <h5>Create a Drink</h5>
      <form id="userDrinkInput" action="/createdrink" method="POST">
        <input type="text" name="strdrink" value="" placeholder="Enter Drink Name" />
        <input type="text" name="strcategory" value="" placeholder="Enter Drink category" />
        <select name="glassSize">
          <option name="tall" value="Tall">Tall Glass</option>
          <option name="small" value="Tall">Small Glass</option>
        </select>
        <input type="hidden" name="username" value="{{username}}">
        <input type="text" name="strinstructions" value="" placeholder="Enter Instructions" />
        <input type="text" name="strdrinkthumb" value="" placeholder="Enter drink thumbnail image" />
        <input type="text" name="stringredient" value="" placeholder="Enter drink ingredients" />
        <input type="submit" value="Create">
      </form>



    </div>



    <h4>User-created Drink recipes</h4>
    <div class="container" >
      <div class="row">
        <div class="col-sm">
          User
        </div>
        <div class="col-sm">
          Drink Information
        </div>
        <div class="col-sm">
          Drink image

